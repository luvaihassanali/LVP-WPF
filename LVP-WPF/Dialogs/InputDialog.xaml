<Window x:Class="LVP_WPF.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LVP_WPF"
        mc:Ignorable="d"
         Height="300" Width="900" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI" Background="Black" WindowStyle="None">
    <Border BorderThickness="1">
        <Border.BorderBrush>
            <SolidColorBrush Color="White" Opacity="0.5"/>
        </Border.BorderBrush>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition />
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Margin="10,0,0,0" Text="{Binding Caption}" FontSize="48" Foreground="LightBlue"/>
            <TextBlock Grid.Row="1" Margin="10,0,10,0" FontSize="28" Foreground="White" Text="{Binding Message}" TextWrapping="Wrap"/>
            <Button FontSize="24" Foreground="White" Background="Black" Content="Continue" HorizontalAlignment="Right" Margin="10,10,140,10" Grid.Row="2" Height="40" Width="120" Click="ContinueButton_Click"/>
            <Button FontSize="24" Foreground="White" Background="Black" Content="Exit" HorizontalAlignment="Right" Margin="10,10,10,10" Grid.Row="2" Height="40" Width="120" Click="ExitButton_Click"/>
        </Grid>
    </Border>
</Window>